---
import Layout from '../layouts/Layout.astro';
const response = await fetch('https://shibe.online/api/shibes');
const data = await response.json();
const randomDog = data[0];
---

<Layout title="hi." description="this is my page.">
	<main>
		<div class="flex items-center justify-center flex-col p-20">
		<h2 class="text-gradient text-8xl font-semibold text-accent drop-shadow-2xl mb-5">hi.</h2>
		<h6 class="mb-5">I am wave.</h6>
		<button class="btn btn-accent dog mb-3">poosh for fun</button>
		<a href="/signin" class="btn btn-accent mb-4">sign in</a>
		<img id="dog" class="w-96 h-96" src={randomDog} alt="Photo of Shiba Inu" style="display: none;">
		</div>
	</Layout>

	<script lang="js">
		const shibabutton = document.querySelectorAll('button.dog');

		shibabutton.forEach((button) => {
		  button.addEventListener('click', () => {
            document.getElementById('dog').style.display = 'initial';
		  });
		});
	  </script>